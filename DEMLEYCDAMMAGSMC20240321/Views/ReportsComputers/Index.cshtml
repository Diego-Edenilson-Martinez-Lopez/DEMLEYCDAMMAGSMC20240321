@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Generar Reporte</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="ReportsComputers" asp-action="GenerarReporte" method="get" class="p-4 bg-light shadow rounded">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese el nombre">
                </div>
                <div class="form-group">
                    <label for="marca">Marca:</label>
                    <input type="text" class="form-control" id="marca" name="marca" placeholder="Ingrese la marca">
                </div>
                <div class="form-group">
                    <label for="opcion">Formato:</label>
                    <select class="form-control" id="opcion" name="opcion">
                        <option value="PDF">PDF</option>
                        <option value="EXCEL">Excel</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Generar Reporte</button>
            </form>
        </div>
    </div>
</div>
