@model DEMLEYCDAMMAGSMC20240321.Models.Users

@{
    ViewData["Title"] = "Registrar Usuarios";
}

<div class="row" style="margin-top:20px;">
    <div class="row">
        <form asp-action="Create" class="card" enctype="multipart/form-data">
            <div class="card-header row">
                <h1 class="card-text col-md-12">Registrar Usuarios</h1>
            </div>
            <div class="card-body row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-4">
                    <label asp-for="UserName" class="control-label">Nombre de Usuario <span style="color:red;">*</span></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Password" class="control-label">Contraseña <span style="color:red;">*</span></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label">Correo Electrónico <span style="color:red;">*</span></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Status" class="control-label">Estado <span style="color:red;">*</span></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Image" class="control-label">Imagen <span style="color:red;">*</span></label>
                    <input type="file" id="fileImagen" asp-for="Image" class="form-control" onchange="mostrarVistaPrevia()" accept="image/*" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <img id="imagenPrevia" src="~/images/default.jpg" alt="Vista previa de la imagen" style="max-width: 200px; max-height: 200px;">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="RolesId" class="control-label">ID de Rol <span style="color:red;">*</span></label>
                    <input asp-for="RolesId" class="form-control" />
                    <span asp-validation-for="RolesId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <input type="submit" value="Crear" class="btn btn-primary" style="width:100%;" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary" style="width:100%;">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function mostrarVistaPrevia() {
            var input = document.getElementById('fileImagen');
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    document.getElementById('imagenPrevia').src = e.target.result;
                }

                reader.readAsDataURL(input.files[0]); // Convierte el archivo a una URL base64
            }
        }
    </script>
 }