@model DEMLEYCDAMMAGSMC20240321.Models.Users

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 class="card-title">Detalles de Usuario</h1>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-md-4 text-right">
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>
                        <dd class="col-md-8">
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        <dt class="col-md-4 text-right">
                            @Html.DisplayNameFor(model => model.Password)
                        </dt>
                        <dd class="col-md-8">
                            @Html.DisplayFor(model => model.Password)
                        </dd>
                        <dt class="col-md-4 text-right">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-md-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-md-4 text-right">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-md-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                        <dt class="col-md-4 text-right">
                            @Html.DisplayNameFor(model => model.Image)
                        </dt>
                        <dd class="col-md-8">
                            @Html.DisplayFor(model => model.Image)
                        </dd>
                        <dt class="col-md-4 text-right">
                            @Html.DisplayNameFor(model => model.RolesId)
                        </dt>
                        <dd class="col-md-8">
                            @Html.DisplayFor(model => model.RolesId)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>
